{
    "name": "schema-seed-monorepo",
    "private": true,
    "description": "Production-ready monorepo for schema-seed",
    "scripts": {
        "build": "turbo build",
        "dev": "turbo dev",
        "lint": "turbo lint",
        "test": "turbo test",
        "format": "prettier --write \"**/*.{ts,tsx,md}\"",
        "typecheck": "turbo typecheck",
        "changeset": "changeset",
        "version-packages": "changeset version",
        "release": "changeset publish",
        "build:all": "pnpm -r build",
        "test:all": "pnpm -r test",
        "lint:all": "pnpm lint",
        "preflight:release": "pnpm build:all && pnpm test:all && pnpm lint:all && node scripts/check-packages.mjs"
    },
    "devDependencies": {
        "@alinazar-111/schema-seed": "workspace:*",
        "@alinazar-111/schema-seed-core": "workspace:*",
        "@changesets/cli": "^2.29.8",
        "@eslint/js": "^9.17.0",
        "@types/node": "^20.17.10",
        "eslint": "^9.17.0",
        "jiti": "^2.6.1",
        "prettier": "^3.4.2",
        "tsup": "^8.3.5",
        "turbo": "^2.3.3",
        "typescript": "^5.7.2",
        "typescript-eslint": "^8.18.1",
        "vitest": "^2.1.8"
    },
    "packageManager": "pnpm@9.15.1",
    "engines": {
        "node": ">=18"
    }
}