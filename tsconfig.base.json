{
    "compilerOptions": {
        "target": "ES2022",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "lib": [
            "ES2022"
        ],
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "composite": false,
        "paths": {
            "@schema-seed/core": [
                "./packages/core/src/index.ts"
            ],
            "@schema-seed/generators": [
                "./packages/generators/src/index.ts"
            ]
        }
    }
}